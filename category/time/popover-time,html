<script>
    let secondsElapsed = 0;
    const triggerThreshold = 15;
    const timerElement = document.getElementById('visual-timer');
    const msgElement = document.getElementById('timer-msg');

    const timerInterval = setInterval(() => {
        secondsElapsed++;
        timerElement.innerText = secondsElapsed;

        if (secondsElapsed >= triggerThreshold) {
            msgElement.innerText = "¡Tiempo cumplido! Disparando Pop Over...";
            msgElement.classList.replace('text-secondary', 'text-success');
            console.log("LOG [Ticket 2579]: Se han alcanzado los 15 segundos de permanencia.");
            clearInterval(timerInterval);
        }
    }, 1000);
</script>
